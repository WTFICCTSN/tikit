datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserType {
  id    String @id @default(cuid())
  name  String @unique
  users User[]
}

model User {
  id    String @id @default(cuid())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userType    UserType? @relation(fields: [id_userType], references: [id], onDelete: Cascade, onUpdate: Cascade)
  id_userType String?

  profile  Profile?
  password Password?
  Ticket   Ticket[]
}

model Password {
  hash   String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Contact {
  id       String              @id @default(cuid())
  name     String
  info     String              @unique
  phone    Boolean
  email    Boolean
  profiles ContactsOnProfile[]
}

model Profile {
  id String @id @default(cuid())

  first_name String
  last_name  String
  contacts   ContactsOnProfile[]


  user    User   @relation(fields: [id_user], references: [id])
  id_user String @unique

  profilePic Image?  @relation(fields: [id_pic], references: [id])
  id_pic     String? @unique
}

model ContactsOnProfile {
  contact    Contact  @relation(fields: [id_contact], references: [id])
  id_contact String
  profile    Profile  @relation(fields: [id_profile], references: [id])
  id_profile String
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([id_contact, id_profile])
}

model Image {
  id        String            @id @default(cuid())
  name      String
  url       String            @unique
  createdAt DateTime          @default(now())
  createdBy String
  Profile   Profile?
  TicketImg ImageFromTicket[]
}

model PriorityType {
  id    String @id @default(cuid())
  name  String @unique
//  Ticket Ticket[]
}

model Ticket {
  id    String @id @default(cuid())
  title String @unique
  desc  String

  imagens ImageFromTicket[]

  parentTicket Ticket? @relation("Subtickets", fields: [id_ticket], references: [id])
  id_ticket    String?

  subtickets Ticket[] @relation("Subtickets")

  user    User   @relation(fields: [id_user], references: [id])
  id_user String

//  pioridade PriorityType @relation(fields: [id_priority], references: [id])
//  id_priority String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ImageFromTicket {
  ticket     Ticket   @relation(fields: [id_ticket], references: [id])
  id_ticket  String
  imagem     Image    @relation(fields: [id_imagem], references: [id])
  id_imagem  String
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([id_ticket, id_imagem])
}



